import java.util.*; 
class linkmenu 
{ 
  public static void main(String args[])
  {
    Scanner sc=new Scanner(System.in); 
    System.out.println("enter elements");
    LinkedList<Integer> x=new LinkedList<Integer>();
    
    int n,ch; 
    
    do
 { 
   System.out.println("1.BeginInsert \n2.EndInsert\n 3.Position Insert \n4.Begin Delete\n 5.End Delete\n 6.Position Delete\n7.Display\n 8.Exit\n .....Enter your Choice:\n");
   ch=sc.nextInt(); 
   switch(ch) 
   { 
     case 1: System.out.println("Enter n value");
     n=sc.nextInt(); 
     x.addFirst(n); 
     break; 
     case 2: System.out.println("Enter n value"); 
     n=sc.nextInt();
     x.addLast(n);
     break; 
     case 3: System.out.println(x); 
     default:System.out.println("Invalid choice");
     } 
     System.out.println("1.BeginInsert\n 2.EndInsert\n 3.position Insert\n 4.Begin Delete\n 5.End Delete\n 6.Position Delete\n 7.Display\n 8.Exit\n.....Enter your Choice:\n");
     ch=sc.nextInt();
 }
while(ch<8);
} 
  
}
